# Environment Variables Example for Brand Logo Detection
# Copy this file to .env and modify the values

# =============================================================================
# MYSQL DATABASE
# =============================================================================
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=logo_user
MYSQL_PASSWORD=logo_password
MYSQL_DATABASE=logo_detection
MYSQL_ROOT_PASSWORD=root_password

# =============================================================================
# BACKEND API
# =============================================================================
BACKEND_URL=http://localhost:8000
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000

# =============================================================================
# FRONTEND (STREAMLIT)
# =============================================================================
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0

# =============================================================================
# MODEL CONFIGURATION
# =============================================================================
DEFAULT_MODEL=models/best.pt
CONFIDENCE_THRESHOLD=0.5
IOU_THRESHOLD=0.45

# =============================================================================
# DOCKER COMPOSE PROFILES
# =============================================================================
# Use: docker-compose --profile dev up (includes MySQL admin tools)
# Use: docker-compose up (production mode)
